@model FinancialTrackerMVC.Models.Bills.BillsUpdate
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bill : @Model.debtorName</h4>
<hr/>
<div class="row">
<div class="col-md-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="debtorName" class="control-label"></label>
            <input asp-for="debtorName" class="form-control" />
            <span asp-validation-for="debtorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="id" class="control-label"></label>
            @Html.DropDownListFor(model => model.id, (SelectList)ViewBag.SubDebtorType)
            <span asp-validation-for="id" class="text-danger"></span>
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
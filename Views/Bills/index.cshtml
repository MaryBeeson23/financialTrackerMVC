@model IEnumerable<FinancialTrackerMVC.Models.Bills.BillsDetail>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="text-center">All Bills</h1>

    <p>
        <a class="action-links btn btn-primary btn-secondary" asp-action="Create">Add New Bill</a>
    </p>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.debtorName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bills in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => bills.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bills.debtorName)
                    </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = bills.id }) |
                    @Html.ActionLink("Details", "Details", new { id = bills.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = bills.id })
                </td>
                </tr>
            }
        </tbody>
    </table>